{
	"config": {
		"preferred-install": "dist",
		"optimize-autoloader": true
	},
	"require": {
		"php": ">=7.2",
		"codeigniter4/framework": "^4"
	},
	"require-dev": {
		"mikey179/vfsstream": "1.6.*",
		"phpunit/phpunit": "8.5.*"
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit",
		"post-update-cmd": [
			"@composer dump-autoload"
		]
	}
}
